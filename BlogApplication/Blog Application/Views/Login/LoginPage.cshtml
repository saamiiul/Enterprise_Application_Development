@model Blog_Application.Models.Member
<html>
<head>
    <title>Login</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/LoginPage.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <form method="post" action="/Login/LoginPage">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <div class="col-md-12">
                    <h2>Sign In</h2>
                    <hr>
                    <div class="form-group">
                        <input asp-for="email" placeholder="Email Address">
                        <span asp-validation-for="email"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="password" type="password" placeholder="Password">
                        <span asp-validation-for="password"></span>
                    </div>
                    <button class="btn btn-primary btn-lg btn-block" type="submit"><b>Sign In</b></button>
                    <p class="p1"><a asp-action="ForgetPage"><u>Forgotten Password?</u></a></p>
                </div>
            </div>
        </form>
    </div><br>
    <p class="p2">Don't have an acount?<a asp-action="SignUpPage"> Sign up here.</a></p>
</body>
</html>